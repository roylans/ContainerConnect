<style>
  .timeline {
    background: white;
  }

  .section-title {
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 1rem;
    color: var(--neutral-dark);
  }

  .timeline-subtitle {
    text-align: center;
    font-size: 1.2rem;
    color: var(--neutral-medium);
    margin-bottom: 3rem;
  }

  .timeline-container {
    max-width: 800px;
    margin: 0 auto;
    position: relative;
  }

  .timeline-container::before {
    content: '';
    position: absolute;
    left: 30px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: #e9ecef;
    z-index: 1;
  }

  .timeline-item {
    position: relative;
    margin-bottom: 3rem;
    display: flex;
    align-items: flex-start;
  }

  .timeline-marker {
    position: relative;
    z-index: 2;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 2rem;
    flex-shrink: 0;
  }

  .completed .timeline-marker {
    background: var(--success-color);
    color: white;
  }

  .in-progress .timeline-marker {
    background: var(--primary-color);
    color: white;
    animation: pulse 2s infinite;
  }

  .upcoming .timeline-marker {
    background: #e9ecef;
    color: var(--neutral-medium);
  }

  .marker-icon {
    font-size: 1.5rem;
  }

  .timeline-content {
    flex: 1;
    background: #f8f9fa;
    padding: 2rem;
    border-radius: 15px;
    border-left: 4px solid transparent;
  }

  .completed .timeline-content {
    border-left-color: var(--success-color);
  }

  .in-progress .timeline-content {
    border-left-color: var(--primary-color);
  }

  .upcoming .timeline-content {
    border-left-color: #dee2e6;
  }

  .timeline-content h3 {
    font-size: 1.3rem;
    margin-bottom: 0.5rem;
    color: var(--neutral-dark);
  }

  .timeline-content p {
    color: var(--neutral-medium);
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .timeline-status {
    display: inline-block;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 600;
  }

  .completed .timeline-status {
    background: rgba(40, 167, 69, 0.1);
    color: var(--success-color);
  }

  .in-progress .timeline-status {
    background: rgba(255, 107, 53, 0.1);
    color: var(--primary-color);
  }

  .upcoming .timeline-status {
    background: rgba(108, 117, 125, 0.1);
    color: var(--neutral-medium);
  }

  .progress-bar {
    width: 100%;
    height: 6px;
    background: #e9ecef;
    border-radius: 3px;
    margin-top: 1rem;
    overflow: hidden;
  }

  .progress-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--primary-color), #ff8c42);
    border-radius: 3px;
    transition: width 0.3s ease;
  }

  .timeline-cta {
    margin-top: 4rem;
    text-align: center;
  }

  .cta-content {
    background: linear-gradient(135deg, var(--secondary-color), #45a3c4);
    color: white;
    padding: 3rem 2rem;
    border-radius: 20px;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-content h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .cta-content p {
    font-size: 1.1rem;
    margin-bottom: 2rem;
    opacity: 0.9;
    line-height: 1.6;
  }

  .cta-content .btn {
    background: white;
    color: var(--secondary-color);
    font-weight: 700;
  }

  .cta-content .btn:hover {
    background: #f8f9fa;
    transform: translateY(-2px);
  }

  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.1); }
    100% { transform: scale(1); }
  }

  @media (max-width: 768px) {
    .section-title {
      font-size: 2rem;
    }

    .timeline-container::before {
      left: 20px;
    }

    .timeline-marker {
      width: 40px;
      height: 40px;
      margin-right: 1rem;
    }

    .marker-icon {
      font-size: 1rem;
    }

    .timeline-content {
      padding: 1.5rem;
    }

    .cta-content {
      padding: 2rem 1.5rem;
    }
  }
</style>